function gsearch {
    search_phrase=$1
    url="https://www.google.com/search?q="
    url+=$(echo "${search_phrase}" | python3 -c "if True:
        from urllib.parse import quote_plus
        import sys
        print(quote_plus(sys.stdin.readlines()[0].strip()), end='')
    ")
    chromium $url
}
